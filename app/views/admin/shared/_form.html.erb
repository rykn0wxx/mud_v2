<div class="box">
  <div class="box-header">
    <h4 class="md-subhead">
      <%= action_name == "new" ? "New" : "Update" %> <%= obj.model_name.to_s.titleize %> Details
    </h4>
  </div>
  <div class="box-body">
    <%= simple_form_for [:admin, obj], :wrapper => :horizontal_form, :html => { :class => "form-horizontal"} do |f| %>
      <% obj.attribute_names.each do |attribute| %>
        <%= f.input attribute.to_sym, :placeholder => attribute.upcase unless to_show_fields?(attribute) %>
      <% end %>
      <div class="form-group">
        <div class="col-sm-9 col-sm-offset-3">
          <%= f.button :submit, (action_name == "new" ? "Create" : "Update"), :class => "btn-default" %>
          <%= link_to "Cancel", { :controller => controller_name, :action => "index" }, { :class => "btn btn-flat btn-primary" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
