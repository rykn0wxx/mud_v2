<% flash.each do |name, msg| %>
  <div id="flash_<%= name %>" class="callout alert alert-dismissible fade in <%= name == 'notice' ? 'alert-info' : 'alert-danger' %>" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
    <% if name == 'notice' %>
      <%= msg %>
    <% else %>
      <strong><%= msg %></strong>
    <% end %>
  </div>
<% end %>
